<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="testng_TAU">
    <test name="search for a customer">
        <classes>
            <class name="com.testautomation.chp3annotations.ConfigurationAnnotations">
                <methods>
                    <include name="searchCustomer"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="search for a product">
        <classes>
            <class name="com.testautomation.chp3annotations.ConfigurationAnnotations">
                <methods>
                    <include name="searchProduct"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>